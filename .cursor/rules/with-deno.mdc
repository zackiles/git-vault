```ts
import {
  parseArgs,
  // see https://jsr.io/@std/cli@1.0.17/doc/~/
  promptSecret,
  promptSecret
} from '@std/cli'

// see https://jsr.io/@std/cli@1.0.17/doc/unstable-prompt-multiple-select/~/promptMultipleSelect
