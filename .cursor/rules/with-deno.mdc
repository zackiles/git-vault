// see https://jsr.io/@std/cli@1.0.17/doc/unstable-progress-bar-stream/~/ProgressBarStream
import { ProgressBarStream } from '@std/cli/unstable-progress-bar-stream'

// see https://jsr.io/@std/cli@1.0.17/doc/unstable-prompt-select/~/promptSelect
